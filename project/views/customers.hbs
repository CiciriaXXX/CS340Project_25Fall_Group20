{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Loyalty Points</th>
            <th></th>
           
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the attributes }}
        {{#each customers}}
        <tr>
            <td>{{this.customerID}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phoneNumber}}</td>
            <td>{{this.address}}</td>
            <td>{{this.loyaltyPoints}}</td>

            {{! DELETE form }}
            <form id='delete_customer_form'>
                <input type='hidden' name='delete_customer_id' value='{{this.customerID}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
{{!-- CREATE FORM --}}
<h2>Add a New Customer</h2>
<form class="cuForm" id="create_customer_form">
    <label for="create_firstNameInput">First Name: </label>
    <input type="text" name="create_firstNameInput" id="create_firstNameInput" required>

    <label for="create_lastNameInput">Last Name: </label>
    <input type="text" name="create_lastNameInput" id="create_lastNameInput" required>

    <label for="create_phoneInput">Phone Number: </label>
    <input type="text" name="create_phoneInput" id="create_phoneInput" required>

    <label for="create_emailInput">Email: </label>
    <input type="email" name="create_emailInput" id="create_emailInput">

    <label for="create_addressInput">Address: </label>
    <input type="text" name="create_addressInput" id="create_addressInput">

    <label for="create_loyaltyPointsInput">Loyalty Points: </label>
    <input type="number" name="create_loyaltyPointsInput" id="create_loyaltyPointsInput" min="0" required>

    <input type="submit" value="Add Customer">
</form>

{{! UPDATE form }}
{{!-- UPDATE FORM --}}
<h2>Update a Customer</h2>
<form class="cuForm" id="update_customer_form">
    <label for="update_customer_ID_from_dropdown_Input">Select Customer: </label>
    <select name="customer_ID_from_dropdown_Input" id="update_customer_ID_from_dropdown_Input" required>
        <option value="" disabled selected>Select a Customer</option>
        {{#each customers}}
        <option value="{{this.customerID}}" required>
            {{this.customerID}} - {{this.firstName}} {{this.lastName}}
        </option>
        {{/each}}
    </select>

    <label for="update_phoneInput">Phone Number: </label>
    <input type="text" name="update_phoneInput" id="update_phoneInput" required>

    <label for="update_emailInput">Email: </label>
    <input type="email" name="update_emailInput" id="update_emailInput">

    <label for="update_addressInput">Address: </label>
    <input type="text" name="update_addressInput" id="addressInput">

    <label for="update_loyaltyPointsInput">Loyalty Points: </label>
    <input type="number" name="update_loyaltyPointsInput" id="update_loyaltyPointsInput" min="0" required>

    <input type="submit" value="Update Customer">
</form>
